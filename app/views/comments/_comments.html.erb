<h3> Comments </h3>

<% @post.comments.each do |comment| %>

<div class="card">
  <div class="card-header">
    <%= comment.username %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p> <%= comment.body %></p>
          </blockquote>
  </div>

    <div class= 'rows'>
    <div class= 'md-6 '>
    <p class="btn btn-primary nav-text"> <%= link_to  "Delete", [comment.post, comment],
                                                                method: :delete,
                                                                data: {confirm: 'Are you sure?'}
  
  
   %> 
  
  </p>
  </div>
  
  </div>
</div>
<br>


<%end%>
